<%= form_for itinerary_activity do |f| %>
  <% if itinerary_activity.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(itinerary_activity.errors.count, "error") %>
        prevened this activity from being saved:
      </h2>

      <ul>
      <% itinerary_activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date, min: @itinerary.start_date, max: @itinerary.end_date %>
  <%= f.label :start_time %>
  <%= f.time_field :start_time%>
  <br>
  <%= f.label :end_date %>
  <%= f.date_field :end_date, min: @itinerary.start_date, max: @itinerary.end_date %>
  <%= f.label :end_time %>
  <%= f.time_field :end_time%>
  <br>
  <%= f.label :location_name, "Location:" %>
  <%= f.collection_select :location_name, Location.all, :name, :name %>
  <br>
  <%= f.label :activity_name, "Activity:"%>
  <%= f.text_field :activity_name, list: "activity_autocomplete" %>
  <datalist id="activity_autocomplete">
    <% Activity.all.each do |activity| %>
      <option value="<%= activity.name.capitalize %>">
    <% end %>
  </datalist>
  <%= f.hidden_field :itinerary_id, :value => @itinerary.id %>
<br>
  <%= f.submit submit_text %>
<% end %>
