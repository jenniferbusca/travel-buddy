<%= form_for itinerary_activity do |f| %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date%>
  <%= f.label :start_time %>
  <%= f.time_field :start_time%>
  <br>
  <%= f.label :end_date %>
  <%= f.date_field :end_date%>
  <%= f.label :end_time %>
  <%= f.time_field :end_time%>
  <br>
  <%= f.label :activity %>
  <%= f.collection_select :activity_id, Activity.all, :id, :name %>
  <br>
  <%= f.label :location %>
  <%= f.collection_select :location_id, Location.order(:country), :id, :full_name, include_blank: true%>
  <br>

  <%= f.submit submit_text %>
<% end %>
